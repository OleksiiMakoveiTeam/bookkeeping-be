{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "target": "esnext",
        "module": "es2015",
        "experimentalDecorators": true,
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "coverage"
    ]
}